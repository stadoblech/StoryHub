        <ComboBox x:Name="comboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="233,81,0,0" Grid.Row="1" VerticalAlignment="Top" Width="222"/>
        <ComboBox x:Name="comboBox1" Grid.Column="1" HorizontalAlignment="Left" Margin="233,118,0,0" Grid.Row="1" VerticalAlignment="Top" Width="222"/>
        <ComboBox x:Name="comboBox2" Grid.Column="1" HorizontalAlignment="Left" Margin="233,155,0,0" Grid.Row="1" VerticalAlignment="Top" Width="222"/>

    </Grid>
</Page>
